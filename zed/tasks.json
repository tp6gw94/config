[
  {
    "label": "ESLint fix",
    "command": "eslint --fix '$ZED_FILE'"
  },
  {
    "label": "Lazygit",
    "command": "lazygit",
    "hide": "always",
    "allow_concurrent_runs": true,
    "reveal": "always",
    "reveal_target": "center"
  },
  {
    "label": "yazi current",
    "command": "yazi '$ZED_DIRNAME'",
    "hide": "always",
    "allow_concurrent_runs": true,
    "reveal": "always",
    "reveal_target": "center"
  },
  {
    "label": "yazi root",
    "command": "yazi '$ZED_WORKTREE_ROOT'",
    "hide": "always",
    "allow_concurrent_runs": true,
    "reveal": "always",
    "reveal_target": "center"
  },
  {
    "label": "File Finder",
    "command": "zed \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "reveal_target": "center"
  },
  {
    "label": "Find in Files",
    "command": "zed \"$(tv text)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true,
    "reveal_target": "center"
  }
]
