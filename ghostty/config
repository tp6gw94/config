theme = zenbones

font-family = "Maple Mono NF CN"
confirm-close-surface=false

keybind = ctrl+a>r=reload_config
keybind = ctrl+a>t=new_tab
keybind = ctrl+a>n=new_window

# tab
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8
keybind = ctrl+a>9=last_tab

keybind = ctrl+left_bracket=previous_tab
keybind = ctrl+left_bracket=next_tab
keybind = ctrl+a>shift+x=close_tab

# panel
keybind = ctrl+a>enter=toggle_split_zoom

keybind = ctrl+a>shift+h=new_split:right
keybind = ctrl+a>v=new_split:down

keybind = ctrl+a>h=goto_split:left
keybind = ctrl+a>j=goto_split:down
keybind = ctrl+a>k=goto_split:up
keybind = ctrl+a>l=goto_split:right

keybind = shift+alt+up=resize_split:up,10
keybind = shift+alt+down=resize_split:down,10
keybind = shift+alt+right=resize_split:right,10
keybind = shift+alt+left=resize_split:left,10
keybind = ctrl+a>equal=equalize_splits

keybind = ctrl+a>x=close_surface

# scroll
keybind = ctrl+a>d=scroll_page_down
keybind = ctrl+a>u=scroll_page_up
keybind = ctrl+a>g=scroll_to_top
keybind = ctrl+a>shift+g=scroll_to_bottom

keybind = ctrl+a>space=toggle_quick_terminal
